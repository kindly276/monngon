<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.kindly.monngon.model.CookingType" />

        <variable
            name="cookingtype"
            type="com.kindly.monngon.model.CookingType" />
        <variable
            name="hander"
            type="com.kindly.monngon.handler.Hander" />

    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:onClick="@{(view) -> hander.onCategoryClick(view,cookingtype.id_cooking_type,cookingtype.name_cooking_type)}"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:text="@{cookingtype.name_cooking_type}"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>
